
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // For now, allow public read and write access to the Project collection.
    // In a real app, you would restrict write access to authenticated users.
    match /Project/{projectId} {
      allow read, write: if true;
    }

    // You would add rules for your other collections here as well.
    // For example:
    // match /User/{userId} {
    //   allow read;
    //   allow write: if request.auth != null && request.auth.uid == userId;
    // }
  }
}
