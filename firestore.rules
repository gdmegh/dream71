
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Allow public read access to projects, but restrict writes.
    // In a real app, you would secure the write rule further,
    // for example, only allowing authenticated users of a certain role.
    match /Project/{projectId} {
      allow read: if true;
      allow write: if true; // WARNING: This allows anyone to write. Secure this in production.
    }

    // Add rules for other collections as needed.
  }
}
